 <table class = "table table-bordered table-hover">
   <% @comments.each do |comment| %>
      <tr>
        <td>
          <h6><%= comment.body %> </h6>
          <p> Posted by <%= link_to comment.user.user_name, comment.user %>
          | <%= time_ago_in_words(comment.created_at) %> ago </p>
        </td>
      </tr>
    <% end %>
</table>
