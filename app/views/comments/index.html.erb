 <table class = "table table-bordered table-hover">
   <% Comment.find(:all, :order => "created_at DESC", :limit => 30).each do |comment| %>
      <tr>
        <td>
          <h6><%= comment.body %> </h6>
          <p> Posted by <%= link_to "#{comment.user.user_name}", user_path(comment.user) %>
          | <%= time_ago_in_words(comment.created_at) %> ago </p>
        </td>
      </tr>
    <% end %>
</table>
