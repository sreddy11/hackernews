<h1> Login </h1>

<%= form_for(:login, :url => login_path) do |f| %>
  <p>
    <%= f.label "Username" %>
    <%= f.text_field :user_name %>
  </p>
  <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
    </p>  
  <p>
    <%= f.submit "Login" %>
    </p>
<% end %>

<p> <%= link_to "Need an account? Register here", new_user_path %>
<p><%= link_to "Forgot password?", new_reset_password_path %></p>


