<h2><%= link_to @article.title, @article.url %><font size="1"> <%="( #{@article.domain} )" %> </h2>

 <table class = "table table-bordered table-hover">
    <% @article.comments.recent.each do |comment| %>
      <tr>
        <td>
          <h6><%= comment.body %> </h6>
          <p> Posted by <%= link_to "#{comment.user.user_name}", user_path(comment.user) %>
          | <%="#{time_ago_in_words(comment.created_at)} ago" %>  </p>
        </td>
      </tr>
    <% end %>
</table>

<p> <button class="btn btn-primary" type="button">
  <%= link_to "Add comment", new_article_comment_path(@article)%> 
</button> </p>





