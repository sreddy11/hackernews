
  <table class = "table table-bordered table-hover">
    
    <% @articles.each do |article| %>
      <tr>
        <td>
          <h6><%= link_to article.title, article.url %> <font size="1"> <%="(#{article.domain})" %> </font></h6>
          <p> Posted by <%= link_to "#{article.user.user_name}", user_path(article.user) %> | 
          <%= time_ago_in_words(article.created_at) %> ago | 
          <%= link_to pluralize(article.comments.count, "comment"), article_path(article) %> 
          </p>
        </td>
      </tr>
    <% end %>
    
  </table>

<%= will_paginate @articles %>

  

